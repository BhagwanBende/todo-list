@model IEnumerable<TODO.Models.Task>

@{
    ViewBag.Title = "To-Do List";
}

<h2 class="mb-3 text-primary">To-Do List</h2>



<!-- Create New Task Button -->
<p>
    <a class="btn btn-success" href="@Url.Action("Create", "Tasks")">
        <i class="fas fa-plus-circle"></i> Create New Task
    </a>
</p>

<!-- Table for Tasks -->
<table class="table table-striped table-hover shadow">
    <thead class="bg-primary text-white">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.IsCompleted)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>
                    @if (item.IsCompleted)
                    {
                        <span class="badge bg-success">✔️ Completed</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">❌ Not Completed</span>
                    }
                </td>
                <td>
                    <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", "Tasks", new { id = item.Id })">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a class="btn btn-info btn-sm" href="@Url.Action("Details", "Tasks", new { id = item.Id })">
                        <i class="fas fa-info-circle"></i> Details
                    </a>
                    <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", "Tasks", new { id = item.Id })"
                       onclick="return confirm('Are you sure you want to delete this task?');">
                        <i class="fas fa-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
