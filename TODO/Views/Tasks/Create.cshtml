@model TODO.Models.Task

@{
    ViewBag.Title = "Create Task";
}

<div class="container mt-4">
    <div class="card shadow-lg rounded">
        <div class="card-header bg-primary text-white text-center">
            <h3><i class="fas fa-plus-circle"></i> Create a New Task</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label class="form-label fw-bold">Task Title</label>
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter task title..." } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Task Description</label>
                    @Html.TextAreaFor(model => model.Description, new { @class = "form-control", placeholder = "Enter task details...", rows = "4" })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>

                <div class="form-check mb-3">
                    @Html.EditorFor(model => model.IsCompleted, new { htmlAttributes = new { @class = "form-check-input" } })
                    <label class="form-check-label">Mark as Completed</label>
                </div>

                <div class="d-flex justify-content-between">
                    <a href="@Url.Action("Index", "Tasks")" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Save Task
                    </button>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
