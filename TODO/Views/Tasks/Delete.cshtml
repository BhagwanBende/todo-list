@model TODO.Models.Task

@{
    ViewBag.Title = "Delete Task";
}

<div class="container mt-4">
    <div class="card shadow-lg rounded">
        <div class="card-header bg-danger text-white text-center">
            <h3><i class="fas fa-trash-alt"></i> Delete Task</h3>
        </div>
        <div class="card-body">
            <h3 class="text-center text-warning">Are you sure you want to delete this task?</h3>
            <div class="mb-4">
                <h4>Task Details</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-3">Title:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

                    <dt class="col-sm-3">Description:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                    <dt class="col-sm-3">Status:</dt>
                    <dd class="col-sm-9">
                        @if (Model.IsCompleted)
                        {
                            <span class="badge bg-success">Completed</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Not Completed</span>
                        }
                    </dd>
                </dl>
            </div>

            <div class="d-flex justify-content-between">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i> Confirm Delete
                    </button>
                }

                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline-secondary" })
            </div>
        </div>
    </div>
</div>
